---
import type { Experience } from '../interfaces/Experience'

// eslint-disable-next-line @typescript-eslint/no-empty-object-type
interface Props extends Experience {}

const { company, position, location, dates, description } = Astro.props
---

<div
  class="md:space-x-4] relative mx-12 grid pb-12 before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 before:content-[''] md:grid-cols-5 md:gap-10 dark:before:border-white/15"
>
  <div class="relative pb-12 md:col-span-2">
    <div class="sticky top-0">
      <span class="absolute -left-[42px] rounded-full text-5xl">&bull;</span>
      <h3 class="text-xl font-bold">{position}</h3>
      <h4 class="text-lg font-semibold text-gray-600 dark:text-white">{company}</h4>
      <p class="m-0 p-0 text-sm text-gray-600/80 dark:text-white/80">{dates}</p>
      <p class="m-0 p-0 text-sm text-gray-600/80 dark:text-white/80">{location}</p>
    </div>
  </div>
  <div class="relative flex flex-col gap-2 pb-4 text-gray-600 md:col-span-3 dark:text-gray-300">
    {description}
  </div>
</div>

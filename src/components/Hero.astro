---
import { CONTACT_LINKS } from '../consts/contactLinks'
import { PARTICLE_CANVAS_ID } from '../consts/particleCanvasId'

const contactLinks = CONTACT_LINKS
const canvasId = PARTICLE_CANVAS_ID
---

<div class="relative h-dvh w-full overflow-hidden">
  <canvas id={canvasId} class="absolute inset-0 h-full w-full"></canvas>
  <div class="relative z-10 flex h-full flex-col items-center justify-center p-4 text-center">
    <h1 class="mb-4 text-5xl font-bold tracking-tighter sm:text-7xl">JAIME PINEDA</h1>
    <p class="mb-4 text-lg tracking-widest text-gray-400 sm:text-xl">Web Developer</p>
    <div class="space-x-2">
      {
        contactLinks.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex rounded-full border border-gray-400 bg-gradient-to-r from-gray-800 to-black p-2 text-white transition hover:scale-105 hover:from-black"
          >
            <link.icon height="24" width="24" />
          </a>
        ))
      }
    </div>
  </div>
</div>

<script src="../utils/setupParticles.ts"></script>
